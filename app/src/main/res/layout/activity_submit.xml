<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".postDisasterReport.SubmitReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/activity_submit_report_view"
        >

        <TextView
            android:id="@+id/activity_submit_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Post Hurricane Block Report"
            android:textSize="50sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/activity_submit_sub_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:text="Review Report"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/activity_submit_report_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lorem ipsum"
            android:lineSpacingExtra="4dp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/activity_submit_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit report to Disaster Relief"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_submit_message_layout"
        android:gravity="center_horizontal"
        >
        <com.tomer.fadingtextview.FadingTextView
            android:id="@+id/activity_submit_fading_message"
            android:layout_margin="30dp"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            app:texts="@array/submit_message"
            app:timeout="3000"
            />

    </LinearLayout>
</LinearLayout>